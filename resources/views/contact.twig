{% extends "layout.twig" %}

{% block title %}Kontakt{% endblock %}

{% block content %}

<div class="distance"></div>

<div class="container min-container">

  <div class="tile">

    <h1>Kontakt</h1>

    <h3>Kontaktinformationen</h3>

    <p>
      E-mail: info@senioren-service-neustadt.de
      <br>
      Telefon: 05032 - 9017389
    </p>

    <h3>Kontaktformular</h3>

    <form role="form">

      <div class="form-group">

        <input type="email" class="form-control" id="email" placeholder="Ihre E-mail">

      </div>

      <div class="form-group">

        <input type="text" class="form-control" id="name" placeholder="Ihre Name">

      </div>

      <div class="form-group">

        <textarea class="form-control" style="resize:vertical" id="message" rows="6" placeholder="Ihre Nachricht"></textarea>

      </div>

      <div class="alert alert-danger hidden" id="wrong_input">
        <b>Achtung!</b> Bitte füllen Sie alle Felder aus.
      </div>

      <div class="alert alert-danger hidden" id="error_alert">
        <b>Achtung!</b> Nachricht konnte nicht gesendet werden,
        bitte versuchen Sie es später erneut.
      </div>

      <div class="alert alert-success hidden">
        <b>Gesendet!</b> Nachricht wurde gesendet,
        wir werden sie so schnell wie möglich bearbeiten.
      </div>


      <div class="form-group clearfix">

        <button id="btn_send" type="button" class="btn btn-success pull-left" style="font-size: 12pt;">Absenden</button>

        <button id="btn_new" type="button" class="btn btn-success hidden pull-left" style="margin-left: 5px; font-size: 12pt;">Neue Nachricht +</button>

        <div class="loader hidden pull-left"></div>

      </div>

    </form>

  </div>

</div>

{% endblock %}


{% block footer %}
<script>setNavActive('{{ path_for('contact') }}'); var mail_url = '{{ path_for('mail') }}';</script>
<script src="/scripts/contact.min.js"></script>
{% endblock %}
